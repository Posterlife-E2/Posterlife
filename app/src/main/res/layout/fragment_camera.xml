<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Camera">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/camera_capture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:backgroundTint="@color/trans"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewFinder"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/outlinphoto_camera_white_48dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BDA6A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButtonCameraSwitch"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginEnd="232dp"
            android:backgroundTint="@color/trans"
            android:clickable="true"
            android:translationY="6pt"
            app:backgroundTint="@color/trans"
            app:srcCompat="@drawable/outline_cameraswitch_white_36dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButtonFlashOn"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/trans"
            android:scaleX="0.40"
            android:scaleY="0.60"
            android:translationX="110pt"
            android:translationY="6pt"
            android:visibility="visible"
            app:srcCompat="@drawable/outline_flash_on_white_36dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButtonFlashOff"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/trans"
            android:scaleX="0.40"
            android:scaleY="0.60"
            android:translationX="130pt"
            android:translationY="6pt"
            android:visibility="visible"
            app:srcCompat="@drawable/outline_flash_off_white_36dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButtonFlashAuto"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/trans"
            android:scaleX="0.40"
            android:scaleY="0.60"
            android:translationX="150pt"
            android:translationY="6pt"
            android:visibility="visible"
            app:srcCompat="@drawable/outline_flash_auto_white_36dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.camera.view.PreviewView>


</androidx.constraintlayout.widget.ConstraintLayout>
